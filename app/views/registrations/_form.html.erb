<div class="sm:mx-auto sm:w-full sm:max-w-md">
  <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">

    <%= form_with model: @user, url: registrations_path, class: "space-y-6" do |form| %>

      <%= render "shared/errors", form: form %>

      <div>
        <%= form.label :email_address, class: "block text-sm font-medium leading-6 text-gray-900" %>
        <div class="mt-2">
          <%= form.email_field :email_address,
                               autofocus: true,
                               autocomplete: "email",
                               class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6" %>
        </div>
      </div>

      <div>
        <%= form.label :password, class: "block text-sm font-medium leading-6 text-gray-900" %>
        <div class="mt-2">
          <%= form.password_field :password,
                                  autocomplete: "new-password",
                                  class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6" %>
        </div>
      </div>
      <p class="text-center text-sm text-gray-600">
        Already have an account?
        <%= link_to "Log in", new_session_path, class: "font-medium text-blue-600 hover:text-blue-500" %>
      </p>
      <div>
        <%= form.submit "Sign up", class: "flex w-full justify-center rounded-md bg-blue-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 cursor-pointer transition-colors duration-200" %>
      </div>

    <% end %>

  </div>
</div>
