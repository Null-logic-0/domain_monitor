<%= form_with model: domain, class: "mt-5 sm:flex sm:items-center " do |form| %>

  <%= form.label :name, class: "sr-only" %>
  <%= form.text_field :name,
                      placeholder: "example.org",
                      default_value: "",
                      autofocus: true,
                      class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6" %>


  <div class="mt-3 sm:ml-3 sm:mt-0 sm:flex-shrink-0">
    <%= form.submit "Add Domain", class: "flex w-full items-center justify-center rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 transition-colors duration-200 cursor-pointer" %>
  </div>
<% end %>