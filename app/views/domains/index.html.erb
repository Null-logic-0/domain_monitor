<% content_for :head do %>
  <meta name="turbo-refresh-method" content="morph">
  <meta name="turbo-refresh-scroll" content="preserve">
<% end %>

<%= turbo_stream_from :domains %>

<% @domains.each do |domain| %>

  <%= turbo_stream_from domain %>
<% end %>

<div class="max-w-7xl mx-auto p-4">

  <div class="my-12">
    <h1 class="text-4xl font-bold text-center leading-tight tracking-tight text-gray-900">
      My Domains
    </h1>
    <p class="mt-2 text-sm text-gray-600 text-center">
      A list of all domains currently being monitored.
    </p>
    <%= render "form", domain: Domain.new %>
  </div>


  <div class="flow-root">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">

          <table class="min-w-full divide-y divide-gray-300 bg-white">
            <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="py-3.5 pl-4 pr-3 underline text-left text-sm font-semibold text-gray-900 sm:pl-6">
                <%= sort_link_to "Domain", "name" %>
              </th>
              <th scope="col" class="px-3 py-3.5 text-left underline text-sm font-semibold text-gray-900">
                <%= sort_link_to "Expires", "expires_at" %>
              </th>
              <th scope="col" class="px-3 py-3.5 text-left underline text-sm font-semibold text-gray-900">
                <%= sort_link_to "Last Checked", "last_checked_at" %>
              </th>
              <th scope="col" class="text-end py-3.5 pl-3 pr-4 sm:pr-12 text-sm font_semibold">
                Actions
              </th>
            </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">
            <% @domains.each do |domain| %>
              <tr class="hover:bg-gray-50 transition-colors duration-150">
                <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">
                  <%= domain.name %>
                </td>

                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                  <% if domain.available? %>
                    <div class="bg-green-50 text-green-700 p-2 rounded">Available</div>
                  <% elsif domain.expires_soon? %>
                    <div class="bg-orange-50 text-orange-700 p-2 rounded">
                      <%= l domain.expires_at.to_date, format: :long %>
                    </div>
                  <% elsif domain.unknown? %>
                    <div class="bg-gray-50 text-gray-700 p-2 rounded">Unknown</div>
                  <% else %>
                    <%= l domain.expires_at.to_date, format: :long %>
                  <% end %>
                </td>

                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                  <%= domain.last_checked_at? ? "#{time_ago_in_words(domain.last_checked_at).capitalize} ago" : "Never" %>
                </td>

                <td class="whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                  <div class="flex items-center justify-end gap-3">
                    <%= button_to "Sync", domain_sync_path(domain), method: :patch, class: "rounded bg-white px-2.5 py-1.5 text-xs font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 cursor-pointer transition-colors" %>

                    <%= button_to "Remove", domain, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-900 bg-transparent border-none cursor-pointer text-sm transition-colors" %>
                  </div>
                </td>
              </tr>
            <% end %>

            <% if @domains.empty? %>
              <tr>
                <td colspan="4" class="px-6 py-12 text-center text-sm text-gray-500">
                  <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                    <path vector-effect="non-scaling-stroke" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
                  </svg>
                  <h3 class="mt-2 text-sm font-semibold text-gray-900">No domains</h3>
                  <p class="mt-1 text-sm text-gray-500">Get started by adding a new domain above.</p>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>

        </div>
      </div>
    </div>
  </div>
</div>
